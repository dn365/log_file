<h2>Listing nodes</h2>
<br/>
<div>
<form class="form-search">
  <div class="input-append">
    <input type="text" class="span2 search-query">
    <button type="submit" class="btn">Search</button>
  </div>
  <div class="input-prepend">
    <%= link_to 'New Node', new_node_path, :class => "btn" %>
  </div>
</form>
</div>
<br/>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
	<th>log count</th>
    <th>Confin</th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= link_to node.name, node_line_items_path(:node_id => node) %></td>
    <td><%= node.description %></td>
	<td></td>
    <td>
	<%= link_to 'Show', node %> |
    <%= link_to 'Edit', edit_node_path(node) %> |
    <%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>




