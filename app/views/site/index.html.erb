<h1>nodes list</h1>
<br/>
<%= notice %>
<table class="table table-hover">
	<tr>
		<th>name</th>
		<th>log</th>
	</tr>
	
	<% @nodes.each do |node| %>
	<tr>
		<td><%= node.name %></td>
		<td>
			<% node.line_items.each do |line_item| %>
			<%= line_item.log.title %>,
			<% end %></td>
		
	</tr>
	<% end %>
</table>

<%= link_to "uptime", :action => "uptime" %>
				
